{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "outDir": "src/public/js",
    "rootDir": "src/public/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/public/ts/**/*"],
  "exclude": [
    "./node_modules", "dist", "src/public/js"]
}